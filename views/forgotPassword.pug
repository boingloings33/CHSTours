extends base

block content
  main.main
    .forgot-password-form
      h2.heading-secondary.ma-bt-lg Forgot your password? 
      form.form
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(
            type='email',
            placeholder='you@example.com',
            required,
            autocomplete='off'
          )
        .form__group
          button(type='submit').btn.btn--green Send email